<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:id="@+id/editfoodheader_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Food"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/name_textfield_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editfoodheader_edit"
        android:inputType="text"
        android:hint="Foodentry"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/kcal_textfield_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_textfield_edit"
        android:inputType="number"
        android:hint="kcal"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/quantity_textfield_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kcal_textfield_edit"
        android:inputType="numberDecimal"
        android:hint="Quantity"
        android:layout_margin="20dp"/>


    <TextView
        android:id="@+id/labelforspinner_edit"
        android:layout_below="@+id/quantity_textfield_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/unit_spinner_edit"
        android:gravity="center"
        android:text="Your Unit for Quantity:"/>

        <Spinner
            android:id="@+id/unit_spinner_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@+id/labelforspinner_edit">
        </Spinner>

    <Button
        android:id="@+id/foodbutton_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit_spinner_edit"
        android:text="Edit Food"
        android:layout_margin="20dp"/>

</RelativeLayout>
