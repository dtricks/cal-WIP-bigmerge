<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reset.food_database.add_unit.activity_add_unit">

    <TextView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:id="@+id/addunitheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Unit"
        android:layout_marginTop="5dp"/>


    <EditText
        android:id="@+id/unit_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addunitheader"
        android:inputType="text"
        android:hint="unit"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/submitunitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unit_textfield"
        android:text="Submit Unit"
        android:layout_margin="20dp"/>

</RelativeLayout>
